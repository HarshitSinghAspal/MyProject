<% layout('layouts/boilerplate')%>
<div id="cluster-map" class="mb-3"></div>
                <form action="/hotels" method="GET">
     <div class="row mb-3">  
                    <div class="col-md-10 mb-3">
                        <input type="search"  placeholder="Search hotel by name" name="search" autofocus class="form-control">
                    </div>
                    <div class="col-md-2 mb-3">
                        <input type="submit" class="btn btn-primary" value="Search" class="form-control">  
                    </div>
                </div>
                </form>
    <h1>Hotels</h1>
    <% for (let hotel of hotels){%>
    <div class="card mb-4">
        <div class="row">
            <div class="col-md-4">
                <%if(hotel.images.length) {%>
                <img class="img-fluid" alt="" src="<%=hotel.images[0].url%>"  style=" width:100%; height:300px !important;"crossorigin>
                <% }else {%>
                <img class="img-fluid" alt=""  style=" width:100%; height:300px !important;"
                    src="https://images.unsplash.com/photo-1517840901100-8179e982acb7?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" crossorigin>
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= hotel.title %> </h5>

                    <p class="card-text"><%= hotel.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= hotel.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/hotels/<%=hotel._id%>">View <%=hotel.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const hotels = { features: <%- JSON.stringify(hotels) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>